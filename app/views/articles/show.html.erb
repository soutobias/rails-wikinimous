<div class="container m-3 text-center align-middle">
  <div class="d-flex justify-content-center">
    <h1><%= @article.title %></h1>
    <%= link_to 'Edit', edit_article_path %>
    <%= link_to 'Delete',
                article_path(@article),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
  </div>
  <p><%= @article.content %></p>
  <%= link_to 'Back', articles_path %>
</div>
